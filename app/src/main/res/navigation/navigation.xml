<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mobiledevpro.apptemplate.ui.mainscreen.view.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_user_edit"
            app:destination="@id/userEditFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/userEditFragment"
        android:name="com.mobiledevpro.apptemplate.ui.mainscreen.view.UserEditFragment"
        android:label="UserEditFragment">
        <action
            android:id="@+id/action_user_view"
            app:destination="@id/userViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/userEditFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/userViewFragment"
        android:name="com.mobiledevpro.apptemplate.ui.mainscreen.view.UserViewFragment"
        android:label="UserViewFragment">
        <action
            android:id="@+id/action_user_view_go_back"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
</navigation>